@{
    Layout = null;
}
<div class="col-sm-4 well col-sm-offset-4" ng-controller="LoginController as loginCtrl" style="margin-top: 120px;">

    <div class="form-group">
        <label for="userid">User Id</label>
        <input type="text" class="form-control" ng-model="loginCtrl.User.Email" id="userid" placeholder="User Id">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" ng-model="loginCtrl.User.Password" id="password" placeholder="Password">
    </div>

    <div class="checkbox">
        <label>
            <input type="checkbox" ng-model="loginCtrl.RemmeberMe"> Remember me
        </label>
    </div>
    <button type="submit" ng-click="loginCtrl.Submit()" class="btn btn-default">Log In</button>
    <button type="submit" ng-click="loginCtrl.Cancel()" class="btn btn-default">Cancel</button>
</div>